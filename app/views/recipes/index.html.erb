<h1>Search results for: <%= @search_term %></h1>
<hr>

<% if @recipes.nil? %>
	<p>No recipes found with this keyword. Try another.</p>

<% else %>

	<table border="1">
		<tr>
			<th>Thumbnail</th>
			<th>Title</th>
			<th>Social Rank</th>
		</tr>
		<% @recipes.each do |recipe| %>
		<tr>
			<td><%= link_to(image_tag(recipe['image_url'], size: '100'), recipe['image_url']) %></td>
			<td class="cell-padding"><%= link_to(recipe['title'], recipe['source_url']) %></td>
			<td class="cell-center"><%= recipe['social_rank'].round %></td>
		</tr>
		<% end %>
	</table>

<% end %>